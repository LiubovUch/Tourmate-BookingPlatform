@model Assignment1.Models.CarRental
@{
    ViewData["Title"] = "Delete Car Rental";
}

<h2>@ViewData["Title"]</h2>

<h3>Are you sure you want to delete this car rental?</h3>

<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CarModel)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CarModel)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RentalCompany)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RentalCompany)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AvailabilityStartDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AvailabilityStartDate)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AvailabilityEndDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AvailabilityEndDate)
        </dd>
    </dl>
    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="CarRentalId" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>

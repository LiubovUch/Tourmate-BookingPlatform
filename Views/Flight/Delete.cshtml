@model Assignment1.Models.Flight
@{
    ViewData["Title"] = "Delete Flight";
}

<h2>@ViewData["Title"]</h2>

<h3>Are you sure you want to delete this flight?</h3>

<div>
    <dl class="row">
        <dt class="col-sm-2">Airline</dt>
        <dd class="col-sm-10">@Model.Airline</dd>

        <dt class="col-sm-2">Departure Location</dt>
        <dd class="col-sm-10">@Model.DepartureLocation</dd>

        <dt class="col-sm-2">Arrival Location</dt>
        <dd class="col-sm-10">@Model.ArrivalLocation</dd>

        <dt class="col-sm-2">Departure Time</dt>
        <dd class="col-sm-10">@Model.DepartureTime.ToString("yyyy-MM-dd HH:mm")</dd>

        <dt class="col-sm-2">Arrival Time</dt>
        <dd class="col-sm-10">@Model.ArrivalTime.ToString("yyyy-MM-dd HH:mm")</dd>

        <dt class="col-sm-2">Price</dt>
        <dd class="col-sm-10">@Model.Price</dd>
    </dl>
    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="FlightId" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>

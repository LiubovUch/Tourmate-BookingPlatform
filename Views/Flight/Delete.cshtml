@model Assignment1.Models.Flight
@{
    ViewData["Title"] = "Delete Flight";
}

<h1 class="text-center">Delete Hotel</h1>

<h3 class="text-center">Are you sure you want to delete this hotel?</h3>

<div class="container" style="width:60%;">
    <h4>Hotel Information</h4>
    <hr />
    <div>
        <dl class="row">
            <dt class="col-sm-3">Airline:</dt>
            <dd class="col-sm-8">@Model.Airline</dd>

            <dt class="col-sm-3">Departure Location:</dt>
            <dd class="col-sm-8">@Model.DepartureLocation</dd>

            <dt class="col-sm-3">Arrival Location:</dt>
            <dd class="col-sm-8">@Model.ArrivalLocation</dd>

            <dt class="col-sm-3">Departure Time:</dt>
            <dd class="col-sm-8">@Model.DepartureTime.ToString("yyyy-MM-dd HH:mm")</dd>

            <dt class="col-sm-3">Arrival Time:</dt>
            <dd class="col-sm-8">@Model.ArrivalTime.ToString("yyyy-MM-dd HH:mm")</dd>

            <dt class="col-sm-3">Price:</dt>
            <dd class="col-sm-8">$@Model.Price</dd>
        </dl>
        <form asp-action="DeleteConfirmed" method="post">
            <input type="hidden" asp-for="FlightId" />
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="Details" asp-route-id="@Model.FlightId" class="btn btn-secondary">Back to Details</a>
        </form>
    </div>
</div>
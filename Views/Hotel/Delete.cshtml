@model Hotel
@{
    ViewData["Title"] = "Delete Hotel";
}

<h1 class="text-center">Delete Hotel</h1>

<h3 class="text-center">Are you sure you want to delete this hotel?</h3>

<div class="container" style="width:60%;">
    <h4>Hotel Information</h4>
    <hr />

    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Location)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Location)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class="col-sm-10">
            $@Html.DisplayFor(model => model.Price)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Amenities)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Amenities)
        </dd>
    </dl>

    <form asp-action="DeleteConfirmed" method="post" class="text-center">
        @Html.HiddenFor(model => model.HotelId)

        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Details" asp-route-id="@Model.HotelId" class="btn btn-secondary">Back to Details</a>
    </form>
</div>
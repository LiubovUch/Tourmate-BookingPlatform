@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> UserManager
@model List<CarRental>
@{
    ViewData["Title"] = "Car Rental List";
    var currentUser = await UserManager.GetUserAsync(User);
    bool isAdmin = await UserManager.IsInRoleAsync(currentUser, "Admin");
}

<img src="https://media.assets.ansira.net/websites/content/cblt-ms-nissan//39f414af448c484db13471de169ff43c_1598x686.jpg" alt="Car Rental Image" class="car-rental-image">
<style>
   
    .car-rental-image {
        width: 100%; 
        height: 150px; 
        margin-top: 20px;
        margin-bottom: 20px;
        object-fit: cover;
        border-radius: 10px;
    }

    .title-bar {
        display: flex;
        align-items: center;
        justify-content: flex-start;
        margin-bottom: 20px;
    }

    .title {
        margin-top: 20px;
    }

    .create-car-rental-btn {
        margin-top: 20px;
        margin-left: 10px;
        padding: 5px 10px; 
        font-size: 14px; 
    }

</style>
@if (isAdmin)
{
    <div class="title-bar">
        <h2 class="title">Car Rental List</h2>
        <a class="btn btn-outline-secondary create-car-rental-btn" asp-action="Create">Add Car Rental</a>
    </div>
}
else
{
    <div class="title-bar">
        <h2 class="title">Car Rental List</h2>
    </div>
}

<form asp-controller="CarRental" asp-action="Index" method="get">
    <div class="row">
        <div class="input-group">
            <input type="text" class="form-control" id="carModel" name="carModel" placeholder="Search by Model">
            <input type="text" class="form-control" id="rentalCompany" name="company" placeholder="Search by Company">
            <select class="form-control" id="sortOrder" name="sortOrder">
                <option value="">Order By Price</option>
                <option value="price_asc">Low to High</option>
                <option value="price_desc">High to Low</option>
            </select>
            <button type="submit" class="btn btn-primary">Apply</button>
        </div>
    </div>
</form>

@if (Model.Any())
{
    <div class="row mt-4">
        @foreach (var carRental in Model)
        {
            <div class="col-sm-4 mb-4" margin-top="40px">
                <div class="card" style="width: 100%;">
                    <div class="card-body">
                        <h5 class="card-title">Car Model: @carRental.CarModel</h5>
                        <p class="card-text">Rental Company: @carRental.RentalCompany</p>
                    </div>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item"><i class="fa-solid fa-hourglass-start"></i> Availability Start Date: @carRental.AvailabilityStartDate.ToString("yyyy-MM-dd")</li>
                        <li class="list-group-item"><i class="fa-solid fa-hourglass-end"></i> Availability End Date: @carRental.AvailabilityEndDate.ToString("yyyy-MM-dd")</li>
                        <li class="list-group-item"><i class="fa-solid fa-wallet"></i> Price: $@carRental.Price</li>
                    </ul>
                    <div class="card-body text-center">
                        <a asp-action="Details" asp-route-id="@carRental.CarRentalId" class="btn btn-success rounded-pill" style="width:30%;">Details</a>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <p>No Car Rentals available.</p>
}